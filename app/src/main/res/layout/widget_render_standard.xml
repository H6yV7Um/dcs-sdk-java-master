<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/widget_render_standard_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="13dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/widget_render_standard_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"

        android:clickable="true"
        android:paddingBottom="3dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="3dp"
        android:text="我是会的内容"
        android:textColor="@color/color_tv_white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/widget_render_standard_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"

        android:maxLines="4"
        android:paddingBottom="2dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="我是会的内容"
        android:textColor="@color/color_tv_gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/widget_render_standard_tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        android:clickable="true"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:text="查看更多"
        android:textColor="@color/color_tv_blue"
        android:textSize="12dp" />
</LinearLayout>